<br>
<div class="container">
	<div class="col-lg-4 col-md-4 col-sm-3 hidden-xs">
	</div>
	<div class="well col-lg-4 col-md-4 col-sm-6 col-xs-12">
		<h4 class="text-center">Register</h4>
		{{#if message}}
		<p class="text-center bg-danger">{{message}}</p>
		{{/if}}
		<form method="POST" action="">
			<div class="form-group">
				<label for="usernameInput">Username</label>
				<input id="usernameInput" name="username" type="text">
			</div>
			<div class="form-group">
				<label for="passwordInput">Password</label>
				<input id="passwordInput" name="password" type="password">
			</div>
			<button type="submit" class="btn" id="registerBTN">
				<span class="glyphicon glyphicon-log-in"></span>
				Register
			</button>
		</form>
		<div class="switchForm text-center">
			<a href="/login">Oops, I already have an account"</a>
		</div>
	</div>
</div>